{
  "id" : "io.github.craigrow.sparrow",
  "runtime" : "org.freedesktop.Platform",
  "runtime-version" : "23.08",
  "runtime-commit" : "3c58ded6fa422d45d30b070f26e428617f6e6509d18cfa1c31f959494511da66",
  "sdk" : "org.freedesktop.Sdk",
  "sdk-commit" : "2f00425aee448b08810bf671103aef1140d844be0cc88bac7a8c6b6145d16455",
  "command" : "sparrow",
  "modules" : [
    {
      "name" : "sparrow",
      "buildsystem" : "simple",
      "sources" : [
        {
          "dest" : "sparrow",
          "url" : "https://github.com/Strozer2002/sparrow/releases/download/v1.0.0/sparrow-wallet.tar.xz",
          "sha256" : "89932f29d40e4ba3d7291590d5b89a0ad001f6e99983f77a838ba566036f2537",
          "type" : "archive"
        }
      ],
      "build-commands" : [
        "cp -R sparrow/bin/ /app/sparrow",
        "chmod +x /app/sparrow/sparrow",
        "mkdir /app/bin/",
        "mkdir /app/lib/",
        "ln -s /app/sparrow/sparrow /app/bin/sparrow",
        "install -Dm644 sparrow/io.github.craigrow.sparrow.metainfo.xml /app/share/appdata/io.github.craigrow.sparrow.metainfo.appdata.xml",
        "install -Dm644 sparrow/icons/256x256/io.github.craigrow.sparrow.png /app/share/icons/hicolor/256x256/apps/io.github.craigrow.sparrow.png",
        "install -Dm644 sparrow/io.github.craigrow.sparrow.desktop /app/share/applications/io.github.craigrow.sparrow.desktop"
      ]
    }
  ],
  "separate-locales" : false,
  "finish-args" : [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--share=network"
  ]
}